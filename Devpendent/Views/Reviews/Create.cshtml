@model Devpendent.Models.Review

@{
    ViewData["Title"] = "Leave a Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="Date" class="form-control" value="@ViewBag.CurrentDate" type="hidden" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" min="0" max="5" step="1" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="UserId" class="form-control" value="@ViewBag.UserId" type="hidden" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Publish" class="btn" />
                <a class="btn btn-clear" asp-action="Index" asp-route-userName="@ViewBag.Username">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
