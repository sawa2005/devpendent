@using Devpendent.Infrastructure.Extensions;
@using System.Globalization;
@model Devpendent.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="project my-3">
    <div>
        <div class="project-thumb-wrap" style="background-image: linear-gradient(rgba(0,0,0) 0%, rgba(0,0,0,0) 75%), url('/media/projects/@Model.Image');">
            <h3>@Model.Title</h3>
        </div>
        <div class="project-text-wrap">
            <div class="project-user-wrap">
                <img src="/media/users/@Model.User.Image" class="project-pfp" alt="@Model.User.UserName Profile Picture">
                <div>
                    <h5>@Model.User.FirstName @Model.User.LastName</h5>
                    <vc:ratings id="0" type="small" user-name="@Model.User.UserName" />
                    @* <p>@@@item.User.UserName</p> *@
                </div>
            </div>
            <div class="mt-3 project-desc-wrap">
                @Html.Raw(Model.Description.Truncate(40))
            </div>
            <div class="project-info-wrap">
                <div>
                    <h4>Delivery Time</h4>
                    <h3>@Model.DeliveryTime</h3>
                </div>
                <div class="budget-wrap">
                    <h4>Budget</h4>
                    <h3>@Model.Budget @NumberFormatInfo.CurrentInfo.CurrencySymbol</h3>
                </div>
            </div>
        </div>
    </div>
</div>
    
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a class="btn btn-clear" asp-action="Manage">Back to List</a>
</form>
